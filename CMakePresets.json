{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "vcpkg",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "STRING",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                },
                "VCPKG_TARGET_TRIPLET": {
                    "type": "STRING",
                    "value": "x64-windows-skse"
                },
                "VCPKG_OVERLAY_TRIPLETS": {
                    "type": "STRING",
                    "value": "${sourceDir}/cmake"
                },
                "CMAKE_MSVC_RUNTIME_LIBRARY": {
                    "type": "STRING",
                    "value": "MultiThreaded$<$<CONFIG:Debug>:Debug>DLL"
                }
            }
        },
        {
            "name": "clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/EHsc -Wno-overloaded-virtual -Wno-delete-non-abstract-non-virtual-dtor $penv{CXXFLAGS}",
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-clang-x64",
                    "enableMicrosoftCodeAnalysis": true,
                    "enableClangTidyCodeAnalysis": true
                }
            }
        },
        {
            "name": "build-tests",
            "displayName": "Build Tests",
            "hidden": true,
            "description": "Include test suites in the build.",
            "cacheVariables": {
                "BUILD_TESTS": {
                    "type": "STRING",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Debug-MSVC",
            "inherits": [
                "vcpkg",
                "build-tests"
            ],
            "displayName": "Debug",
            "description": "Debug build for testing.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug-msvc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "Debug"
                }
            }
        },
        {
            "name": "Release-MSVC",
            "inherits": [
                "vcpkg",
                "build-tests"
            ],
            "displayName": "Release",
            "description": "Optimized release build.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/relwithdebinfo-msvc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "RelWithDebInfo"
                }
            }
        },
        {
            "name": "Debug-Clang",
            "inherits": [
                "vcpkg",
                "build-tests",
                "clang"
            ],
            "displayName": "Debug",
            "description": "Debug build for testing.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug-clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "Debug"
                }
            }
        },
        {
            "name": "Release-Clang",
            "inherits": [
                "vcpkg",
                "build-tests",
                "clang"
            ],
            "displayName": "Release",
            "description": "Optimized release build.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/relwithdebinfo-clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "RelWithDebInfo"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Release-MSVC",
            "displayName": "Release (MSVC)",
            "configurePreset": "Release-MSVC",
            "description": "Optimized release build."
        },
        {
            "name": "Debug-MSVC",
            "displayName": "Debug (MSVC)",
            "configurePreset": "Debug-MSVC",
            "description": "Debug build for testing."
        },
        {
            "name": "Release-Clang",
            "displayName": "Release (Clang)",
            "configurePreset": "Release-Clang",
            "description": "Optimized release build."
        },
        {
            "name": "Debug-Clang",
            "displayName": "Debug (Clang)",
            "configurePreset": "Debug-Clang",
            "description": "Debug build for testing."
        }
    ]
}
